<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.konstudio.firstaid.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/home_to_call"
            app:destination="@id/call" />
        <action
            android:id="@+id/home_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/home_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/home_to_favorites"
            app:destination="@id/favoritesFragment" />
        <action
            android:id="@+id/home_to_situations"
            app:destination="@id/situationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.konstudio.firstaid.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/settings_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/settings_to_call"
            app:destination="@id/call" />
        <action
            android:id="@+id/settings_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/settings_to_situations"
            app:destination="@id/situationsFragment" />
        <action
            android:id="@+id/settings_to_favorites"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.konstudio.firstaid.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/search_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/search_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/search_to_situations"
            app:destination="@id/situationsFragment" />
        <action
            android:id="@+id/search_to_favorites"
            app:destination="@id/favoritesFragment" />
        <action
            android:id="@+id/search_to_call"
            app:destination="@id/call" />
    </fragment>
    <fragment android:id="@+id/call" >
        <action
            android:id="@+id/call_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/call_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/call_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/call_to_situations"
            app:destination="@id/situationsFragment" />
        <action
            android:id="@+id/call_to_favorites"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/situationsFragment"
        android:name="com.konstudio.firstaid.SituationsFragment"
        tools:layout="@layout/fragment_situations">
        <action
            android:id="@+id/situations_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/situations_to_call"
            app:destination="@id/call" />
        <action
            android:id="@+id/situations_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/situations_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/situations_to_favorites"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.konstudio.firstaid.FavoritesFragment"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/favorites_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/favorites_to_call"
            app:destination="@id/call" />
        <action
            android:id="@+id/favorites_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/favorites_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/favorites_to_situations"
            app:destination="@id/situationsFragment" />
    </fragment>
</navigation>